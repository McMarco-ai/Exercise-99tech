{
  "compilerOptions": {
    "target": "es6", 
    "module": "commonjs", 
    "esModuleInterop": true, 
    "skipLibCheck": true, 
    "strict": true, 
    "outDir": "./dist", 
    "rootDir": "./", 
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "./**/*.ts" 
  ],
  "exclude": [
    "node_modules", 
    "dist" 
  ]
}
