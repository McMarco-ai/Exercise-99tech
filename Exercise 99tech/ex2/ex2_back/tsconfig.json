{
  "compilerOptions": {
    "target": "es6", // or higher
    "module": "commonjs", // You can change to "esnext" if you're using ES modules
    "esModuleInterop": true, // Enables interoperability between CommonJS and ES modules
    "skipLibCheck": true, // Skip type checking of declaration files
    "strict": true, // Enable all strict type checking options
    "outDir": "./dist", // Directory for compiled files
    "rootDir": "./", // Root directory of your TypeScript files
    "forceConsistentCasingInFileNames": true // Ensures consistent casing
  },
  "include": [
    "./**/*.ts" // Adjust according to your project structure
  ],
  "exclude": [
    "node_modules", // Exclude node_modules
    "dist" // Exclude output directory if you have one
  ]
}
